//style.css
/* Universal selector to reset margin and padding */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Body background with fallback color and background image (RGBA fallback) */
body {
  background-color: rgba(30, 59, 92, 0.9); /* fallback semi-transparent navy in RGBA */
  background-image: url('https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=1350&q=80');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  color: #1a1a1a; /* HEX dark text for readability */
  font-family: Arial, sans-serif;
  min-height: 100vh;
}

/* Element selector for all h2 tags - add linear gradient background with padding and white text */
h2 {
  font-size: 2rem;
  color: #ffffff; /* white text */
  margin: 1rem 0;
  padding: 0.5rem 1rem;
  /* Gradient background */
  background: linear-gradient(90deg, #005f73 0%, #0a9396 50%, #94d2bd 100%);
  border-radius: 5px;
  display: inline-block;
}

/* ID selector for banner */
#mainHeader {
  background-color: #3498db; /* HEX blue */
  color: white;
  padding: 20px;
  text-align: center;
  box-shadow: 0 2px 8px rgba(52, 152, 219, 0.6);
}

/* Class selector for event containers */
.eventCard {
  background-color: #ffffffcc; /* white with 80% opacity (hex or rgba alternative) */
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 1rem;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

/* Grouping selector for h3 and p */
h3,
p {
  color: #002e2e; /* HEX dark teal */
}

h3 {
  margin-bottom: 0.5rem;
  font-weight: 600;
}

p {
  line-height: 1.4;
}
