    column-count: 1;
  }
  
  .eventCard {
    padding: 15px;
    margin: 0 10px 1.5rem;
  }
}

@media screen and (max-width: 480px) {
  #mainHeader {
    font-size: 1.5rem;
  }
  
  .eventCard {
    padding: 10px;
  }
}

